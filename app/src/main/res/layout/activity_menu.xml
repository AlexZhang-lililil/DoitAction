<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlo_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >

            <Button
                android:id="@+id/btn_menu"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/icon_menu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Do-It!"
                android:textColor="@color/transparent"
                android:textSize="25sp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="110dp"
                />
            <Button
                android:id="@+id/btn_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_search"
                android:layout_marginLeft="110dp"/>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="These are for you ..."/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            />

</LinearLayout>
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="@color/lightGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="menu"
            android:textAlignment="center"
            android:textColor="@color/transparent"
            android:background="@color/colorPrimary"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/txt_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Bookmarks"
            android:textSize="25sp"
            android:drawableLeft="@drawable/icon_bookmark"
            android:textAlignment="center"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txt_achievements"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="My Achievements"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icon_trophy"
            android:textAlignment="center"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txt_suggestion_history"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Do-it History"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icon_history"
            android:textAlignment="center"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Settings"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icon_setting2"
            android:textAlignment="center"
            android:clickable="true"/>

        <TextView
            android:id="@+id/txt_browse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="All Strength"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icon_browse"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:clickable="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_test"
            android:text="test"
            android:layout_gravity="center"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_content"
            android:layout_gravity="center"/>


    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
