<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="this is the aciton's tittle"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/aciton_tittle_history"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the cotent...."
            android:textSize="10sp"
            android:id="@+id/aciton_content_history"
            android:clickable="true"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/completeDate"
        android:text="this is date"
        android:textSize="18sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/search_shape"
        android:id="@+id/action_images"
        android:layout_marginLeft="10dp"/>

</LinearLayout>